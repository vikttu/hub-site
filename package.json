{
  "name": "app",
  "private": "true",
  "dependencies": {
    "autoprefixer": "^10.4.7",
    "esbuild": "^0.14.39",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.0.24"
  },
  "scripts": {
    "standard": "standard 'app/javascript/**/*.js'",
    "build": "esbuild app/javascript/*.* --external:@hotwired/* --bundle --sourcemap --outdir=app/assets/builds",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify"
  },
  "devDependencies": {
    "standard": "^17.0.0"
  }
}
